<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <HBox alignment="BOTTOM_LEFT" spacing="5.0">
        <Button fx:id="btnOpen" onAction="#onOpen" text="Open" />
        <Button fx:id="btnSave" onAction="#onSave" text="Save" />
        <Button fx:id="btnSaveAs" onAction="#onSaveAs" text="Save As" />
        <Button fx:id="btnClose" onAction="#onClose" text="Close" />
        <Label fx:id="fileLabel" text="File: None" textAlignment="CENTER">
         <font>
            <Font size="15.0" />
         </font></Label>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS">
      <padding>
         <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
      </padding></TextArea>

</VBox>
